<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <div class="container contact contact-show">
        <h2>Show</h2>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h3 class="card-title"><%= contact.name%></h3>
                <label>Email </label><span><%= contact.email %></span>
                <br>
                <label>Phone </label><span><%= contact.phone %></span>
            </div>
        </div>
        <div class="contact-menu  mt-2">
            <a class="btn btn-light mr-2" href="/contacts/<%= contact._id %>/edit">Edit</a>
            <form action="/contacts/<%= contact._id %>?_method=delete" method="post">
                <a class="btn btn-light mr-2" href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
            </form>
        </div>
    </div>
</body>
</html>